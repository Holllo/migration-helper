{
  "name": "migration-helper",
  "description": "A tiny helper library for migrating data.",
  "license": "GPL-3.0-or-later",
  "version": "0.1.1",
  "author": "Holllo <helllo@holllo.cc>",
  "repository": "https://github.com/Holllo/migration-helper",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm test && pnpm build",
    "test": "xo && c8 ava && tsc --noEmit"
  },
  "devDependencies": {
    "ava": "^4.0.1",
    "c8": "^7.11.0",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2",
    "xo": "^0.48.0"
  },
  "type": "module",
  "main": "build/source/migration-helper.js",
  "types": "build/source/migration-helper.d.ts",
  "files": [
    "build/source/",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "tests/**/*.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ]
  },
  "c8": {
    "100": true,
    "all": true,
    "include": [
      "source",
      "tests"
    ],
    "reportDir": "coverage",
    "reporter": [
      "text",
      "html"
    ]
  },
  "xo": {
    "prettier": true,
    "rules": {
      "no-await-in-loop": "off"
    },
    "space": true
  }
}
